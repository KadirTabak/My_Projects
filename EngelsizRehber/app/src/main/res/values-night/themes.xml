<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EngelsizRehber" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorSecondaryContainer">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darkMode</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/darkMode</item>
    </style>

    <style name="Theme.EngelsizRehber" parent="Base.Theme.EngelsizRehber" />

    <style name="Screen">
        <item name="android:background">@color/darkMode</item>
    </style>
    <style name="Toolbar">
        <item name="android:background">@color/darkMode</item>
    </style>
    <style name="Settings">
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextMain">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Navbar">
        <item name="android:backgroundTint">@color/darkMode</item>
    </style>
    <style name="Icon">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="IconN">
        <item name="android:icon">@drawable/notifications_icon_white</item>
    </style>
    <style name="IconS">
        <item name="android:icon">@drawable/settings_icon_white</item>
    </style>
    <style name="event">
        <item name="android:backgroundTint">@color/darkblue</item>
    </style>
    <style name="forum">
        <item name="android:backgroundTint">@color/darkblue</item>
    </style>
    <style name="Progress">
        <item name="android:backgroundTint">@color/darkMode</item>
    </style>
    <style name="News">
        <item name="android:backgroundTint">@color/darkblue</item>
    </style>
    <style name="nightModeSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>